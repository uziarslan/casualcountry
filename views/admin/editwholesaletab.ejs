<a href="/user/all" class="nav-item nav-link">Signup Record</a>
            </div>



            </div>

          </div>
        </nav>
        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
          <form method="post" action="/admin/wholesaletabs/edit/<%= wholesaleTab._id %>?_method=PUT">
            <div class="form-group">
              <label for="name">Wholesale Tab Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= wholesaleTab.name %>" required>
            </div>
            <div class="form-group">
              <label for="content">Wholesale Tab Content</label>
              <textarea class="form-control" id="content" name="content" rows="5"
                required><%= wholesaleTab.content %></textarea>
            </div>
            <div class="form-group">
              <label for="categories">Select Linked Categories</label>
              <select name="selectedCategories" class="form-control" multiple>
                <% categories.forEach(category=> { %>
                  <option value="<%= category._id %>" <%=wholesaleTab.categories.includes(category._id) ? 'selected'
                    : '' %>><%= category.name %>
                  </option>
                  <% }) %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Update Wholesale Tab</button>
          </form>






        </div>
      </div>

    </div>
