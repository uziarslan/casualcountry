                    <a href="/user/all" class="nav-item nav-link">Signup Record</a>
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">                    
                    <div class="navbar-nav mr-auto py-0">                        
                        <div class="burger-menu">
                        <a class="nav-item nav-link active fa-2x"><strong> Add Categories From Here</strong></a>
                    </div>
                        <div class="burger-menu-tabs">
                        <a href="/admin/category"
                        class="nav-item nav-link bg-active">Categories</a>
                    <a href="/admin/product" class="nav-item nav-link ">Products</a>
                    <a href="/admin/new-arrivals" class="nav-item nav-link">New Arrival</a>
                    <a href="/admin/trendingproducts" class="nav-item nav-link">Trending</a>
                    <a href="/admin/navbar" class="nav-item nav-link">Navbar</a>
                    <a href="/admin/wholesaletabs" class="nav-item nav-link">WholeSale</a>
                    <a href="/admin/quotations" class="nav-item nav-link">Orders</a>
<a href="/user/all" class="nav-item nav-link">Signup Record</a>
                </div>

                    </div>

                </div>
            </nav>
            <form class="categoryForm" method="post" action="/admin/category">
                <div class="row">
                   
                    <div class="col"> <label for="itemNumber">Enter Category Name </label>
                        <input name="category" type="text" class="form-control"
                            placeholder="Shirts..." required>
                       
                    </div>
                    
                    <div class="col"> <button type="submit" class="btn btn-primary btn_sub  bt-cat">Submit</button>
                    </div>
  
                </div>
                
            </form>
        </div>
    </div>
</div>
<!-- Navbar End -->

    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-0">
        <div class="d-flex flex-column align-items-center " style="min-height: 20px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">All Categories</h1>
             
       
        </div>
    </div>
    <!-- Page Header End -->



    <!-- Shop Start -->
    <div class="container-fluid pt-4 ">
        <div class="row px-xl-5">
            <p>Total: <%= categories.length %></p>
           
                    <!-- Shop Product Start -->
                    <div class="col-lg-12 col-md-12">
                        <div class="row pb-3">
                            <div class="col-12 pb-1">
                                <div class="d-flex align-items-center justify-content-between mb-4">


                                </div>
                            </div>

                            <!-- Product Div Start  -->
                            <% if (categories.length){ %>
                                <% categories.map((cat) => { %> 
                            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                                <div class="card product-item border-0 mb-4">
                                    <div
                                        class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                        <!-- image Tag  -->
                                     
                                               
                                              

                                    </div>
                                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">

                                        <!-- title tag  -->
                                        <a href="/admin/category/<%= cat._id %>/products" class="text-truncate mb-3 fa-2x">
                                            <%=cat.name %>
                                        </a>
                                       
                                      

                                        <!-- Price Tag  -->

                                     


                                    </div>
                                    <div class="card-footer d-flex justify-content-between bg-light border">
                                        <a href="/admin/category/edit/<%= cat._id %>"
                                            class="btn btn-sm text-dark p-0 editcolor"><i
                                                class="fas fa-pen pencolor mr-1 fa-1x"></i>Edit</a>


                                                <form class="iconLink" method="post" action="/admin/category/delete/<%=cat._id %>?_method=DELETE">
                                          
                                            <button type="submit" class="btn btn-sm text-dark p-0"><i class="fas fa-trash trashcolor mr-1 "></i>Delete</button> 
                                        </form>


                                                
                                               
                                
                                       
                                    </div>
                                </div>
                            </div>
                            <%  })  %>
                            <% }  else{ %>
                                <div class="container-fluid bg-secondary mb-0">
                                    <div class="d-flex flex-column align-items-center " style="min-height: 20px">
                                        <h4 class="text-uppercase mb-3">No Categories Found!</h4>
                                    </div>
                                </div>
                                <% } %>
                            <!-- Product Div End  -->
                       
                        </div>
                    </div>
                  
                   
                  
        </div>
       
    </div>
    
                <%- include('../partials/body') %>

