<%- include('../partials/headerhead') %>

 
    <!-- Categories Section -->
    <div class="categories">
        <div class="small-container">
            <div class="row">
             
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="small-container">
        
                <h2 class="title"><%= category.name %> Category</h2>
                <% if (category.products.length === 0) { %>
                    <h5 class="h45">No products found.</h5>
            
       
    
   
                    <div class="row">
                        <div class="col-4"> 
                            <h1 style="height: 17rem;"></h1>
                        </div>
                        <!-- Product Container End -->
                    </div>
                    <% } else { %>
                    <div class="row">
                        <!-- Product Container Start -->
                        <% category.products.forEach(product => { %>
                            <div class="col-4">
                                <a href="/user/product/<%= product._id %>">
                                    <img class="image-size" src="<%= product.images[0].path %>"
                                        alt="<%= product.productTitle %>">
                                    <h4>
                                        <%= product.productTitle %>
                                    </h4>
                            </div>
                            <% }) %>
                                <!-- Product Container End -->
                    </div>
                    <% } %>
    </div>

    <!-- Footer Section -->
    <!-- ... (Your footer code) ... -->
    </div>
    <%- include('../partials/headerbody') %>