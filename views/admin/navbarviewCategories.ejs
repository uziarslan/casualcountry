<%- include('../partials/head') %>
<!-- Topbar Start -->
<div class="container-fluid">
    <p class="text-xl-center fa-2x pt-2"><strong>Welcome to Admin Panel</strong></p>
    <%- include('../partials/flash') %>

</div>
<!-- Topbar End -->

<!-- Navbar Start -->
<div class="container-fluid">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">

            <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0"
                id="navbar-vertical">
                <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">

                    <a href="/admin/category" class="nav-item nav-link ">Categories</a>
                    <a href="/admin/product" class="nav-item nav-link ">Products</a>
                    <a href="/admin/new-arrivals" class="nav-item nav-link">New Arrival</a>
                    <a href="/admin/trendingproducts" class="nav-item nav-link">Trending</a>
                    <a href="/admin/navbar" class="nav-item nav-link bg-active">Navbar</a>
                    <a href="/admin/wholesaletabs" class="nav-item nav-link">WholeSale</a>
                    <a href="/admin/quotations" class="nav-item nav-link">Orders</a>
<a href="/user/all" class="nav-item nav-link">Signup Record</a>

                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
               
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">

                        <div class="burger-menu">
                            <a class="nav-item nav-link active fa-2x"><strong>  View Categories in Navbar</strong></a>
                        </div>

                        <div class="burger-menu-tabs">
                            <a href="/admin/category" class="nav-item nav-link bg-active">Categories</a>
                            <a href="/admin/product" class="nav-item nav-link ">Products</a>
                            <a href="/admin/new-arrivals" class="nav-item nav-link">New Arrival</a>
                            <a href="/admin/trendingproducts" class="nav-item nav-link">Trending</a>
                            <a href="/admin/navbar" class="nav-item nav-link">Navbar</a>
                            <a href="/admin/wholesaletabs" class="nav-item nav-link">WholeSale</a>
                            <a href="/admin/quotations" class="nav-item nav-link">Orders</a>
<a href="/user/all" class="nav-item nav-link">Signup Record</a>
                        </div>
                       
                    </div>
                </div>
            </nav>

            <!-- Category List Start -->
            <div class="container-fluid pt-4">
                <div class="row px-xl-5">
                    <p>Navbar Name: <%= navbar.name %></p>

                    <!-- Category List Start -->
                    <div class="col-lg-12 col-md-12">
                        <div class="row pb-3">
                            <div class="col-12 pb-1">
                                <div class="d-flex align-items-center justify-content-between mb-4"></div>
                            </div>

                            <!-- Category Div Start -->
                            <% if (navbar.categories.length) { %>
                                <% navbar.categories.forEach(category => { %>
                                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                                        <div class="card category-item border-0 mb-4">
                                            <div class="card-header category-img position-relative overflow-hidden bg-transparent border p-0"></div>
                                            <div class="card-body border-left border-right border-bottom text-center p-0 pt-4 pb-3">
                                                <a href="/admin/category/<%= category._id %>/products" class="text-truncate mb-3 fa-2x"><%= category.name %></a>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                                <% }  else{ %>
                                    <div class="container-fluid bg-secondary mb-0">
                                        <div class="d-flex flex-column align-items-center " style="min-height: 20px">
                                            <h4 class="text-uppercase mb-3">No Categories Found in this Navbar!</h4>
                                        </div>
                                    </div>
                                    <% } %>
                            <!-- Category Div End -->
                        </div>
                    </div>
                    <!-- Category List End -->

                </div>
            </div>
         

        </div>
    </div>
</div>
<!-- Navbar End -->

<%- include('../partials/body') %>
